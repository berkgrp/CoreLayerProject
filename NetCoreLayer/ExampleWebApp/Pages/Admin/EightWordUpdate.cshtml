@model EightWordViewModel

@{
    ViewData["Title"] = "Update-Eight";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eight</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateEightWord">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @foreach (var item in Model.EightWordOnly)
            {
                <input asp-for="@item.EightWordID" type="hidden" value="@item.EightWordID" />
                <div class="form-group">
                    <label asp-for="@item.EightWordQuestion" class="control-label"></label>
                    <input asp-for="@item.EightWordQuestion" name="EightWordQuestion" value="@item.EightWordQuestion" class="form-control" />
                    <span asp-validation-for="@item.EightWordQuestion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@item.EightWordAnswer" class="control-label"></label>
                    <input asp-for="@item.EightWordAnswer" name="EightWordAnswer" value="@item.EightWordAnswer" class="form-control" />
                    <span asp-validation-for="@item.EightWordAnswer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@item.EightWordData" class="control-label"></label>
                    <input asp-for="@item.EightWordData" name="EightWordData" value="@item.EightWordData" class="form-control" />
                    <span asp-validation-for="@item.EightWordData" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@item.EightWordScore" class="control-label"></label>
                    <input asp-for="@item.EightWordScore" name="EightWordScore" value="@item.EightWordScore" class="form-control" />
                    <span asp-validation-for="@item.EightWordScore" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="UpdateEightWord" class="btn btn-primary" />
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Anasayfa</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
