@model FourWordViewModel

@{
    ViewData["Title"] = "Index-Four";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a href="@Url.Action("FourWordCreate","Admin")">Kelime Ekle</a>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h2>4 Harfli Kelimeler</h2>
<table class="table">
    <tr>
        <th>İşlemler</th>
        <th>ID</th>
        <th>SORU</th>
        <th>CEVAP</th>
        <th>CEVAP KONTROL</th>
        <th>PUAN</th>
    </tr>
    @foreach (var item in Model.FourWords)
    {
        <tr>
            <td>
                <a asp-action="FourWordUpdate" asp-route-id="@item.FourWordID">Güncelle</a>
                <form asp-action="DeleteFourWord">
                    <div>
                        <input name="fourWordID" type="hidden" value="@item.FourWordID" />
                        <input type="submit" name="fourWordID" value="Sil" class="btn btn-primary" />
                    </div>
                </form>
            </td>
            <td>@item.FourWordID</td>
            <td>@item.FourWordQuestion</td>
            <td>@item.FourWordAnswer</td>
            <td>@item.FourWordData</td>
            <td>@item.FourWordScore</td>
        </tr>
    }
</table>
<div>
    <a asp-action="Index">Anasayfa</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
