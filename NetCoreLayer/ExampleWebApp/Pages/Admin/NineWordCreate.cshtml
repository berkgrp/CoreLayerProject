@model NineWordViewModel

@{
    ViewData["Title"] = "Create-Nine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>9 Harfli Kelime Oluştur</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="PostNineWord">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NineWord.NineWordQuestion" class="control-label">Skor</label>
                <input asp-for="NineWord.NineWordQuestion" class="form-control" />
                <span asp-validation-for="NineWord.NineWordQuestion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NineWord.NineWordAnswer" class="control-label">Cevap</label>
                <input asp-for="NineWord.NineWordAnswer" class="form-control" />
                <span asp-validation-for="NineWord.NineWordAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NineWord.NineWordData" class="control-label">Cevap Kontrol</label>
                <input asp-for="NineWord.NineWordData" class="form-control" />
                <span asp-validation-for="NineWord.NineWordData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NineWord.NineWordScore" class="control-label">Skor</label>
                <input asp-for="NineWord.NineWordScore" class="form-control" />
                <span asp-validation-for="NineWord.NineWordScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="PostNineWord" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Anasayfa</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
