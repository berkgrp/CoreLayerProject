@model EightWordViewModel

@{
    ViewData["Title"] = "Index-Eight";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<a href="@Url.Action("EightWordCreate","Admin")">Kelime Ekle</a>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h2>8 HARFLİ CEVAPLAR</h2>
<table class="table">
    <tr>
        <th>İşlemler</th>
        <th>ID</th>
        <th>SORU</th>
        <th>CEVAP</th>
        <th>CEVAP KONTROL</th>
        <th>PUAN</th>
    </tr>
    @foreach (var item in Model.EightWords)
    {

<tr>
    <td>
        <a asp-action="UpdateEightWord" asp-route-id="@item.EightWordID">Güncelle</a>
        <form asp-action="DeleteEightWord">
            <div>
                <input name="eightWordID" type="hidden" value="@item.EightWordID" />
                <input type="submit" name="eightWordID" value="Sil" class="btn btn-primary" />
            </div>
        </form>
    </td>
    <td>@item.EightWordID</td>
    <td>@item.EightWordQuestion</td>
    <td>@item.EightWordAnswer</td>
    <td>@item.EightWordData</td>
    <td>@item.EightWordScore</td>
</tr>
    }
</table>


<div>
    <a asp-action="Index">Anasayfa</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
