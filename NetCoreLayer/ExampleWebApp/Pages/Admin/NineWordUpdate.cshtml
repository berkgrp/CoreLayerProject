@model NineWordViewModel

@{
    ViewData["Title"] = "Update-Nine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nine</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateNineWord">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @foreach (var item in Model.NineWordOnly)
            {
                <input asp-for="@item.NineWordID" type="hidden" value="@item.NineWordID" />
                <div class="form-group">
                    <label asp-for="@item.NineWordQuestion" class="control-label"></label>
                    <input asp-for="@item.NineWordQuestion" name="NineWordQuestion" value="@item.NineWordQuestion" class="form-control" />
                    <span asp-validation-for="@item.NineWordQuestion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@item.NineWordAnswer" class="control-label"></label>
                    <input asp-for="@item.NineWordAnswer" name="NineWordAnswer" value="@item.NineWordAnswer" class="form-control" />
                    <span asp-validation-for="@item.NineWordAnswer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@item.NineWordData" class="control-label"></label>
                    <input asp-for="@item.NineWordData" name="NineWordData" value="@item.NineWordData" class="form-control" />
                    <span asp-validation-for="@item.NineWordData" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@item.NineWordScore" class="control-label"></label>
                    <input asp-for="@item.NineWordScore" name="NineWordScore" value="@item.NineWordScore" class="form-control" />
                    <span asp-validation-for="@item.NineWordScore" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="UpdateNineWord" class="btn btn-primary" />
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Anasayfa</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
